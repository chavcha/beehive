            <!-- Заголовок и поиск -->
            <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-6">
                <h1 class="text-2xl md:text-3xl font-bold text-gray-900 dark:text-white mb-4 md:mb-0">Групповые чаты</h1>

                <div class="relative w-full md:w-64">
                    <input type="text" placeholder="Поиск чатов..."
                           class="search-input w-full pl-10 pr-4 py-2 rounded-full border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-gray-800 dark:text-gray-200 focus:outline-none transition">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 absolute left-3 top-2.5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                    </svg>
                </div>
            </div>

            <!-- Фильтры чатов -->
            <div class="flex flex-wrap gap-2 mb-6">
                <button class="px-4 py-2 bg-yellow-500 text-white rounded-full text-sm font-medium">
                    Все чаты
                </button>
                <button class="px-4 py-2 bg-gray-200 dark:bg-gray-700 hover:bg-gray-300 dark:hover:bg-gray-600 rounded-full text-sm transition">
                    Новые
                </button>
                <button class="px-4 py-2 bg-gray-200 dark:bg-gray-700 hover:bg-gray-300 dark:hover:bg-gray-600 rounded-full text-sm transition">
                    Непрочитанные
                </button>
                <button class="px-4 py-2 bg-gray-200 dark:bg-gray-700 hover:bg-gray-300 dark:hover:bg-gray-600 rounded-full text-sm transition">
                    Администрируемые
                </button>
            </div>

            <!-- Список чатов -->
            <div class="space-y-3">
                <!-- Чат 1 -->
                <a href="/Chat/Group/chat1" class="block">
                    <div class="chat-card backdrop-blur-md bg-white/95 dark:bg-neutral-900/95 rounded-xl shadow p-4 border border-gray-200 dark:border-neutral-700 flex items-center">
                        <div class="relative mr-4">
                            <img src="/images/group1.jpg" class="w-12 h-12 rounded-full object-cover">
                            <div class="absolute bottom-0 right-0 bg-green-500 w-3 h-3 rounded-full border-2 border-white dark:border-gray-900"></div>
                        </div>
                        <div class="flex-1 min-w-0">
                            <h3 class="font-semibold text-gray-900 dark:text-white truncate">Пчеловоды Москвы</h3>
                            <p class="text-gray-500 dark:text-gray-400 text-sm truncate">Алексей: Привет! Как дела на пасеке? У меня сегодня...</p>
                        </div>
                        <div class="text-right ml-4">
                            <p class="text-xs text-gray-500 dark:text-gray-400">12:45</p>
                            <span class="inline-block bg-yellow-500 text-white text-xs px-1.5 py-0.5 rounded-full unread-badge">3</span>
                        </div>
                    </div>
                </a>

                <!-- Чат 2 -->
